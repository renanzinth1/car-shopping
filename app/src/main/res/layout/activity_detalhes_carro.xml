<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.activity.DetalhesCarroActivity">

    <ImageView
        android:id="@+id/iv_imagem_detahe_carro"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nissan_gt_r" />

    <TextView
        android:id="@+id/tv_nome_detalhe_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="NISSAN GT-R"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Marca"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_marca_detalhe_carro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nissan"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Preço"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_preco_detalhe_carro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="18000"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10sp"
        android:text="Descrição"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_descricao_detalhe_carro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="30dp"
        android:text="O Nissan GT-R é um modelo de automóvel superesportivo produzido pela Nissan, foi anunciado em 2001 com o objetivo de reviver a marca GT-R"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade:"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_quantidade_detalhe_carro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:background="#7EDF83"
        android:src="@drawable/ic_cart" />
</LinearLayout>